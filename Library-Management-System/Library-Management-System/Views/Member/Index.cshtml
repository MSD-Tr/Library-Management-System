@using Library_Management_System.Models.Entity
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<head>
    <title>Üyeler</title>
</head>
<h2>Üyeler</h2>


<table id="example"
       class="table table-striped table-bordered dt-responsive nowrap table-hover"
       style="width: 100%;">

    <thead>
        <tr>
            <th>ÜYE ID</th>
            <th>ÜYE ADI</th>
            <th>ÜYE SOYADI</th>
            <th>OKUL</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>KİTAP GEÇMİŞİ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uye in Model)
        {
            <tr>
                <td>@uye.Id</td>
                <td>@uye.Name</td>
                <td>@uye.Surname</td>
                <td>@uye.School</td>
                <td><a href="/Member/DeleteMember/@uye.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Member/BringMember/@uye.Id" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Member/MemberBookHistory/@uye.Id" class="btn btn-success" style="background-color:lightseagreen">Kitap Geçmişi</a></td>
            </tr>
        }
    </tbody>
</table>
