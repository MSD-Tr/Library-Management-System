@using Library_Management_System.Models.Entity
@model List<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<head>
    <title>Personeller</title>
</head>
<h2>Personeller</h2>


<table id="example"
       class="table table-striped table-bordered dt-responsive nowrap table-hover"
       style="width: 100%;">
    <thead>
        <tr>
            <th>PERSONEL ID</th>
            <th>PERSONEL ADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prs in Model)
        {
            <tr>
                <td>@prs.Id</td>
                <td>@prs.Employees</td>
                <td><a href="/Employee/DeleteEmployee/@prs.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Employee/BringEmployee/@prs.Id" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Employee/AddEmployee/" class="btn btn-primary">Yeni Personel Ekle</a>
