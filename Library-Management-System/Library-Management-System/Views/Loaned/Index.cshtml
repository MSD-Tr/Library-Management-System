@using Library_Management_System.Models.Entity
@model List<Movement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Id</td>
            <td>@k.Book_Id</td>

            <td>@k.Member_Id</td>
            <td>@k.Employee_Id</td>
            <td>@k.StartDate</td>
            <td>@k.FinishDate</td>
            <td><a href="/Book/DeleteBook/@k.Id" class="btn btn-default" style="background-color:#ff6a00">Kitabı İade Et</a></td>
        </tr>
    }
</table>
<a href="/Book/AddBook/" class="btn btn-primary">Yeni Kitap Ekle</a>

