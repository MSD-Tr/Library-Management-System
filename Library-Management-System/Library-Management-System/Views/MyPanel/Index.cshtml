@model Library_Management_System.Models.Entity.Member
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMyPanel.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>
@using (Html.BeginForm("Index2","MyPanel",FormMethod.Post))
            {
<table class="table table-hover" style="margin-top:30px">
    <tr>
        <td>
            <label style="font-weight:bolder">Mail Adresi: </label> @HttpContext.Current.User.Identity.Name
        </td>
    </tr>


    <tr>
        <td>
            @* sql den gelecek kısımlardır. input için name kendi elinle yazmak yerine böyle yazabilirsin. *@

            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x => x.Photograph, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x => x.School, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            <button class="btn btn-warning">Şifre Güncelle</button>
        </td>
    </tr>
</table>
}
@* panel sayfasına mail taşıma işlemi *@
