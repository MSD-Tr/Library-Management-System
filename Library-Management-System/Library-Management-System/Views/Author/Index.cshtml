@using Library_Management_System.Models.Entity
@model List<Author>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>YAZARLAR</h2>
<table class="table table-bordered">
    <tr>
        
        <th>Id</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Detail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var y in Model)
            {
             <tr>
                 <td>@y.Id</td>
                 <td>@y.Name</td>
                 <td>@y.Surname</td>
                 <td>@y.Detail</td>
                 <td>@Html.ActionLink("Sil","DeleteAuthor",new {id=y.Id},new {@class="btn btn-danger",onclick="return confirm ('Silmek İstiyor Musunuz?')"})</td>
                 <td><a href="/Author/BringAuthor/@y.Id" class="btn btn-success">Güncelle</a></td>
             </tr>
            }


</table>
<a class="btn btn-primary" href="/Author/AddAuthor/">Yeni Yazar Ekle</a>