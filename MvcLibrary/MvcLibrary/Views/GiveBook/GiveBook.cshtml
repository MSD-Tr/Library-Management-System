@model MvcLibrary.Models.Entity.Movement
@{
    ViewBag.Title = "GiveBook";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Üye ID</label>
        @Html.TextBoxFor(x => x.User, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @Html.TextBoxFor(x => x.Book, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @Html.TextBoxFor(x => x.Employee, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap alış tarihi</label>
        <input type="text" class="form-control" name="DeliveryDate" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label>Kitap iade tarihi</label>
        <input type="text" class="form-control" name="ReturnDate" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#890cf7; color:white">Kitabı ödünç ver</button>
    </div>
</form>

